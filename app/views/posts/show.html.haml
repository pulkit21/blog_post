%p#notice= notice

%p
  %b Title:
  = @post.title
%p
  %b Body:
  = @post.body
  = @post.user.email
  - if @post.published?
    = @post.published_at
    = link_to "unpublish", unpublished_post_path, class: "btn btn-primary"
  - else
    = link_to "publish", published_post_path, class: "btn btn-primary"

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
