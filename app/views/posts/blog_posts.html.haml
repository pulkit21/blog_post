- @posts.sorted.each do |post|
  .row
    %h3
      = link_to post.title.capitalize, post
  .row
    = truncate_html(post.body.html_safe, length: 800)
  %br  
  .row
    - if !post.published_at.nil?
      %span
        %i.fa.fa-calendar
          = post.set_date
      %span
        %i.fa.fa-clock-o
          = post.set_time
    .pull-right
      - if post.published?
        = link_to "unpublish", unpublished_post_path(post), class: "btn btn-primary"
      - else
        = link_to "publish now", published_post_path(post), class: "btn btn-primary"
      = link_to 'Edit', edit_post_path(post), class: "btn btn-primary"
  %hr    