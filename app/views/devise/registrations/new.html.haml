.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .show-blog-post.listing-radius
    .listing-content
      %h1.lead.post-title Sign Up
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        .row.post-content
          = f.input :username, required: true, autofocus: true, placeholder: "Enter username"
        .row.post-content
          = f.input :email, required: true, autofocus: true, placeholder: "Your Email Address"
        .row.post-content
          = f.input :password, required: true, placeholder: "Enter Password"
        .row.post-content
          = f.input :password_confirmation, required: true, placeholder: "Confirm Password"
        .row.post-content
          = f.button :submit, "Sign up", class: "btn-primary"
      = render "devise/shared/links"
