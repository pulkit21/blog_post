.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .show-blog-post.listing-radius
    .listing-content
      %h1.lead.post-title Edit #{resource_name.to_s.humanize}
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification
        .row.post-content
          = f.input :email, required: true, autofocus: true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p
              Currently waiting confirmation for: #{resource.unconfirmed_email}
        .row.post-content
          = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, placeholder: "Enter your current password"
        .row.post-content
          = f.input :password_confirmation, required: false, placeholder: "Enter a new password"
        .row.post-content
          = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, placeholder: "Re-enter your new password"
        .row.post-content
          = f.button :submit, "Update", class: "btn-primary"
      %h3.lead.post-title Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete}
      / = link_to "Back", :back
