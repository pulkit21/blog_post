.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .show-blog-post.listing-radius
    .listing-content
      %h1.lead.post-title Sign In
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .row.post-content
          = f.input :email, required: false, autofocus: true, placeholder: "Email"
        .row.post-content
          = f.input :password, required: false, placeholder: "Password"
        .row.post-content
          Remember me
          = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
        .row.post-content
          = f.button :submit, "Sign in", class: "btn-primary"
      = render "devise/shared/links"
