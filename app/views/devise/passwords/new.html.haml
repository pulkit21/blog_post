.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .show-blog-post.listing-radius
    .listing-content
      %h1.lead.post-title Forgot your password?
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = f.error_notification
        .row.post-content
          = f.input :email, required: true, autofocus: true, placeholder: "Enter your registered email address"
        .row.post-content
          = f.button :submit, "Send me reset password instructions", class: "btn-primary"
      = render "devise/shared/links"
